<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ihealth.sdk.BP7"
    tools:showIn="@layout/activity_bp7">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_getbattery"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Getbattery" />

            <Button
                android:id="@+id/btn_isOfflineMeasure"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="IsOfflineMeasure" />

            <Button
                android:id="@+id/btn_enableOfflineMeasure"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="EnableOfflineMeasure" />

            <Button
                android:id="@+id/btn_disableOfflineMeasure"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="DisableOfflineMeasure" />

            <Button
                android:id="@+id/btn_startMeasure"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="StartMeasure" />

            <Button
                android:id="@+id/btn_conform_angle"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="ConformAngle" />

            <Button
                android:id="@+id/btn_stopMeasure"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="StopMeasure" />

            <Button
                android:id="@+id/btn_getOfflineNum"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="GetOfflineNumber" />

            <Button
                android:id="@+id/btn_getOfflineData"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="GetOfflineData" />


            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Disconnect" />
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv_return"
        android:layout_width="fill_parent"
        android:layout_height="150dp" />

</LinearLayout>
